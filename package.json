{
  "name": "onebrain-platform",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.6",
  "scripts": {
    "dev": "cd frontend && pnpm run dev",
    "build": "cd frontend && pnpm run build",
    "start": "cd frontend && pnpm run start",
    "lint": "cd frontend && pnpm run lint",
    "install:frontend": "cd frontend && pnpm install",
    "heroku-prebuild": "npm install -g pnpm@8.15.6",
    "heroku-postbuild": "cd frontend && pnpm install && pnpm run build",
    "postinstall": "cd frontend && pnpm install"
  },
  "devDependencies": {}
} 